;;;-*- Mode: Lisp; Package: COMMON-LISP-USER -*-;;; A fallback util in case of emergencies(in-package :cl-user)#+MCL(defun save-all-files ()  (map-windows #'(lambda (win)                   (and (not (typep win 'ccl::listener))                        (window-needs-saving-p win)                        (y-or-n-p "Save ~A" (window-title win))                        (window-save win)))))